<h2>new comment</h2>
<%= form_for @comment do |f| %>
	<%= f.hidden_field :user_id , value:current_user.id %>
	<%= f.hidden_field :post_id, value:@post.id %>
	<div class="field">
		<%= f.label :comment %>
		<%= f.text_area :comment %>
	</div>
	<div class="actions">
    	<%= f.submit %>
  	</div>
<% end %>